<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todos os links</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-3">
        <a href="/add"
            class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Acionar
            links</a>
        <% for(i=0 ; i < links.length ; i++){ %>
            <div id="<%=links[i].id%>" class="card mb-3 mt-3">
                <div class="d-flex justify-content-between card-header">
                    <h2>
                        <%=links[i].title%>
                    </h2>
                    <div class="d-flex align-items-center gap-1">
                        <a class="btn btn-info" href="/edit/<%=links[i].id%>">Editar</a>
                        <button class="btn btn-danger" onclick="deletarPost('<%=links[i].id%>')">Deletar</button>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        <%=links[i].description%>
                    </div>
                    <div class="card-text text-danger">
                        <%=links[i].url%>
                    </div>
                    <div class="text-info">
                        Clicks : <%=links[i].click%>
                    </div>
                </div>
            </div>
            <% } %>
    </div>
    <script>
        function deletarPost(id) {
            fetch('/' + id, { method: "DELETE" }).then(res => {
                if (res.status == 200) {
                    res.text().then(linkID => {
                        console.log(linkID);
                        document.getElementById(linkID).remove()
                    })
                } else {
                    res.json().then(res => {
                        console.log(res.message);

                    })
                }
            })
        }
    </script>
</body>

</html>